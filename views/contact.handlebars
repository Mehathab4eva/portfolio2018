
<div class="formContainer">


	<form action="/contact" method="POST" class="contactForm">
		<h2 class='contact'>Leave A Message...</h2>
		<div>
			<input type="text" name="name" id="name"
			placeholder="Name *required" required="true">
		</div>
		<div>
			<input type="email" name="email" id="email" placeholder="email@ddress.com *required" required="true">
		</div>

		<div>
			<input type="text" name="subject" placeholder="Subject *required" required="true">
		</div>

		<div>

			 <textarea name="message" id="message" placeholder="Type your message here... *required" rows="4" cols="60" required="true"></textarea>
		</div>
		<div>
			<input type="submit" name="submit" value="Send" id="submit">
		</div>
	</form>
</div>